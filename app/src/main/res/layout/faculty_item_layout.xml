<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.DayNight"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:paddingLeft="12dp"
                android:orientation="vertical"
                android:background="#F4EEEE"
                android:gravity="center_vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teachername"

                android:layout_marginTop="5dp"
                android:text="@string/kapl_kumar_yadav"
                android:textColor="@color/textcolor1"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teacherpost"
                android:text="Principal"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/teacheremail"
                android:text="singhkapil347@gmail.com"
                android:inputType="textEmailAddress"
                android:textColor="@color/textcolor"
                android:textSize="16sp"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/teacherupdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update_Info"
                    android:textColor="#F1EAEA"
                    android:layout_marginVertical="4dp"
                    android:layout_marginBottom="4dp"
                    >

                </com.google.android.material.button.MaterialButton>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/teacherimage"
                android:layout_width="26dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.5"
                android:background="#F4EEEE"
                android:src="@drawable/img" />


        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>